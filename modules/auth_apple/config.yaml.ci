server:
  host: ${M_AUTH_APPLE_HOST}
  port: ${M_AUTH_APPLE_PORT}
  route: "/api/auth-apple"

external: true

authapple:
  fallback_email_domain: "${M_AUTH_APPLE_FALLBACK_EMAIL_DOMAIN}"

database:
  provider: ${DB_PROVIDER} # or "mongodb"
  automigrate: true
  postgres:
    host: ${PG_HOST}
    port: ${PG_PORT}
    user: ${PG_USER}
    password: ${PG_PASSWORD}
    name: ${PG_DBNAME}
    sslmode: ${PG_SSL}